{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/js",
    "importHelpers": true,
    "lib": ["es2015", "dom"],
    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "baseUrl": "./",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    /* Source Map Options */
    "inlineSources": true
  },
  "include": [
    "./src/js/**/*.ts",
    "./src/js/**/*.tsx",
    "./@types/*.d.ts"
  ]
}
